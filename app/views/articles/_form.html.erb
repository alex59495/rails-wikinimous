<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
    <h1>New Article</h1>
        <%= form_for(@article) do |f| %>
        <div class="form-group">
            <div class="form-label"> <%= f.label :title %> </div>
            <div class="form-text"><%= f.text_field :title %></div>
        </div>
          <div class="form-group">
            <div class="form-label"> <%= f.label :content %> </div>
            <div class="form-text"><%= f.text_area :content, size: "60x12" %></div>
          </div>
          <%= f.submit %>
        <% end %>
        <br><br>
        <%= link_to "Return to the list", articles_path %>
    </div>
  </div>
</div>